// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  files     File[]
  links     Link[]
  createdAt DateTime @default(now())
}

model File {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  originalName String
  path         String // Local path like /uploads/xyz.pdf
  mimeType     String
  size         Int
  createdAt    DateTime @default(now())
  links        Link[]
}


model Link {
  id        String   @id @default(cuid())
  slug      String   @unique // The QR code content points here
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  type      String   @default("FILE") // Enum not supported in SQLite, using String
  target    String   // URL, Text content, JSON for VCard, etc.
  design    String   @default("{}") // JSON string for storing colors, logo, etc.
  
  fileId    String?  // Optional now
  file      File?    @relation(fields: [fileId], references: [id])
  
  scans     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  scanHistory Scan[]
}

model Scan {
  id        String   @id @default(cuid())
  linkId    String
  link      Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  country   String?
  userAgent String?
}
